<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        app:cardPreventCornerOverlap="true"
app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="beginning|middle">

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_light"
                android:text="Logistics"
                android:layout_marginLeft="8dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/black"  />
            <TextView
                android:id="@+id/text_report_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_bold"

                android:layout_marginLeft="8dp"
                android:text="Job Title"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15px"
                android:paddingTop="3dp"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginStart="8dp"
android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_clock"
                    />
                <TextView
                    android:id="@+id/closingdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/google_sans_light"
                    android:text="Job Title"

                    android:textColor="@android:color/black" />
                <ImageView
                    android:id="@+id/imageLocation"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_location"
                    />
                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/google_sans_light"
                    android:text="Nigeria"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_read_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#F1F1F1"
                android:elevation="10dp"
                android:foreground="?android:attr/selectableItemBackground">


                <ImageView
                    android:id="@+id/imageVieworg"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/internet"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />


                <TextView
                    android:id="@+id/org"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"

                    android:ellipsize="end"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="MSF"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageVieworg"
                    app:layout_constraintTop_toTopOf="parent" />










            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
